#include <stdio.h>

void add(int *a, int *b, int *sum) {
    *sum = *a + *b;
}

int main() {
    int num1, num2, result;

    printf("Enter two numbers: ");
    scanf("%d %d", &num1, &num2);

    add(&num1, &num2, &result);

    printf("The sum of %d and %d is %d\n", num1, num2, result);

    return 0;
}
