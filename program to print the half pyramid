#include <stdio.h>


int main() {
    // Write C code here
    int i, j, m = 1, num;
    printf("enter the number of columns to define:\n");
    scanf("%d", &num);
    
    for(i = 1; i <= num; i++)
{
    for(j = 1; j <= i; j++)
    {
        printf("*");
    }
    printf("\n");
}

for(i = num - 1; i >= num; i--)
{
    for(j = 1; j >= i; j++)
    {
        printf("*");
    }
    printf("\n");
}
    return 0;
}
